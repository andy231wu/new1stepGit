<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"           
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

 
  <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
 
     <property name="basenames">
     <list>
           <value>classpath:env</value> 
           <value>classpath:properties/jsp/messages</value>           
           <value>classpath:properties/jsp/views</value>
           <value>classpath:properties/java/system.parameters</value>
     </list>
     </property>
     <property name="defaultEncoding" value="UTF-8" />
  </bean>
  
    
    <import resource="goods.xml"/>    
    <import resource="tiles-context.xml" />   
    <import resource="hibernate.cfg.xml"/> 
     
    <!--  these two beans are by default, so can ignore them   -->
    <bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" />
    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />
  

</beans>
