<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"           
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


 <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
 
     <property name="basenames">
     <list>
           <value>classpath:env/env</value>           
           <!-- value>classpath:properties/jsp/views</value -->
     </list>
     </property>
     <property name="defaultEncoding" value="UTF-8" />
  </bean>
  
  
  <!-- this for mvc to deal with lazy initial
    <mvc:message-converters>
    <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
        <property name="objectMapper">
            <bean class="com.pastelstudios.json.HibernateAwareObjectMapper" />
        </property>
    </bean>
</mvc:message-converters>   
   -->
   
    <import resource="hibernateMapping.xml"/>  
    <import resource="member.xml"/>
     
 
  
    <!--  these two beans are by default, so can ignore them   -->
